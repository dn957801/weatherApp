<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dinesh.weatherapp.MainActivity">

    <TextView
        android:id="@+id/enterCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:labelFor="@+id/inputCityName"
        android:text="@string/main_enter_city"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/inputCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterCity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="e.g    Halifax"/>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputCityName"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_search" />

    <TextView
        android:id="@+id/CityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/temperature"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:ems="10" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/minmax"
        android:layout_alignStart="@+id/CityName"
        android:layout_marginBottom="25dp"
        android:ems="10" />

    <TextView
        android:id="@+id/minmax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main"
        android:layout_alignStart="@+id/temperature"
        android:layout_marginBottom="25dp"
        android:ems="10" />

    <TextView
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description"
        android:layout_alignStart="@+id/minmax"
        android:layout_marginBottom="31dp"
        android:ems="10" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/humidity"
        android:layout_alignStart="@+id/main"
        android:layout_marginBottom="38dp"
        android:ems="10" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/humidText"
        android:layout_marginEnd="24dp"
        android:layout_toStartOf="@+id/btnSearch"
        android:ems="5" />

    <TextView
        android:id="@+id/clouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cloudText"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/btnSearch"
        android:ems="5" />

    <TextView
        android:id="@+id/humidText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cloudText"
        android:layout_alignBottom="@+id/cloudText"
        android:layout_toStartOf="@+id/description"
        android:text="@string/humidity" />

    <TextView
        android:id="@+id/cloudText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:layout_toEndOf="@+id/description"
        android:text="@string/clouds" />




</RelativeLayout>
