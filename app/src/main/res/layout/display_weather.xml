<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8">

    <TextView
        android:id="@+id/CityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/temperature"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/minmax"
        android:layout_alignStart="@+id/CityName"
        android:layout_marginBottom="25dp"
        android:ems="10" />

    <TextView
        android:id="@+id/minmax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main"
        android:layout_alignStart="@+id/temperature"
        android:layout_marginBottom="25dp"
        android:ems="10" />

    <TextView
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description"
        android:layout_alignStart="@+id/minmax"
        android:layout_marginBottom="31dp"
        android:ems="10" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/humidity"
        android:layout_alignStart="@+id/main"
        android:layout_marginBottom="38dp"
        android:ems="10" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/humidText"
        android:layout_alignStart="@+id/description"
        android:layout_marginStart="11dp"
        android:ems="5" />

    <TextView
        android:id="@+id/clouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cloudText"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/description"
        android:ems="5" />

    <TextView
        android:id="@+id/humidText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/description"
        android:layout_below="@+id/clouds"
        android:layout_marginStart="22dp"
        android:text="@string/humidity"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/cloudText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/clouds"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="15dp"
        android:text="@string/clouds"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

</RelativeLayout>
